<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CFFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RewardMenjawab">

    <ImageView
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reward Yang Anda Peroleh"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 40.252,00"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Tukarkan"
        android:layout_marginTop="16dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:text="Telah menjawab:"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="224dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:text="112 Jawaban" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:text="Pertanyaan mu:"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="224dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:text="10 Pertanyaan" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:text="Quis:"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="224dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:text="5 Quis selesai" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:text="Undang Teman:"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textView14"
            android:layout_width="224dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:text="2 Undangan"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/draw"
        android:padding="16dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            app:srcCompat="@drawable/ic_baseline_home_24" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            app:srcCompat="@drawable/ic_baseline_feed_24" />

        <ImageView
            android:id="@+id/reward"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            app:srcCompat="@drawable/ic_baseline_architecture_24" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            app:srcCompat="@drawable/ic_baseline_person_outline_24" />
    </LinearLayout>
</LinearLayout>