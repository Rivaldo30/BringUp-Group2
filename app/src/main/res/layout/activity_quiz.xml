<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/panel_soal_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.    Sebelum dan sesudah beraktivitas sebaiknya ..."
        android:textSize="14dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_black"/>

    <RadioGroup
        android:id="@+id/radiogroup1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Berdoa"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Berbicara"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Berdeba"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Berdamai"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="14dp"
            android:textColor="@color/black"/>
    </RadioGroup>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/panel_soal_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.    Saat masuk dan keluar kelas hendaknya ..."
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/product_sans_black"/>

                <RadioGroup
                    android:id="@+id/radiogroup2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mengucap Kata"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mengucap Salam"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mengucap Selamat"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tidak Berbicara"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/panel_soal_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.    Setiap orang mempunyai kelebihan dan kekurangan masing-masing. Walaupun berbeda namun kita harus saling ..."
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/product_sans_black"/>

                <RadioGroup
                    android:id="@+id/radiogroup3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Menyaingi"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Menyayangi"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Menyantuni"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Menyinnggung"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/panel_soal_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.    Perbedaan membuat kita saling ..."
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/product_sans_black"/>

                <RadioGroup
                    android:id="@+id/radiogroup4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Menghargai"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Menyaingi"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Membenci"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Menghindar"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/panel_soal_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.    Ketika membaca posisi tubuh harus ..."
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/product_sans_black"/>

                <RadioGroup
                    android:id="@+id/radiogroup5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tegap"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lemas"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Bungkuk"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Bengkok"
                        android:fontFamily="@font/product_sans_regular"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        

        <Button
            android:id="@+id/button_proses"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/product_sans_black"
            android:background="@drawable/btn_myanswer"/>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>